.sorting
  margin-bottom 16px
  text-align right

  +tablet()
    flex-grow 1
    margin-left 16px

  &__mobile
    position relative
    width calc(50vw - 8px)

    label
      background #fff
      border 1px solid #efefef
      font-weight 700
      height 32px
      left 0
      line-height 32px
      position absolute
      text-align center
      top 0
      width 100%

      +tablet()
        padding 0 64px
        width auto

    #sort
      border none
      left 0
      opacity 0
      position absolute
      top 0
      width 100%
      -webkit-appearance none

  &__title
    display block
    font-weight 700
    margin 0 8px 8px 0

  &__option
    cursor pointer
    font-size .85rem

    &.active
      pointer-events none
      font-weight 700

    &:not(:last-child):after
      color #ccc
      content "|"
      font-weight 100
      margin 0 8px
