.product
  border-bottom 1px solid #efefef
  box-shadow 0
  cursor pointer
  margin 0 8px 4px
  transition all .25s
  width calc(50% - 16px)

  +tablet()
    width calc(25% - 16px)

  +desktop()
    width calc(25% - 16px)

  &:hover
    box-shadow 0px 0px 15px 5px #f1f1f1

  &__image
    img
      width 100%

  &__name
    font-size 1rem
    font-weight 700
    min-height 65px
    padding 0 16px
    text-align center

  &__type
    font-size .75rem
    font-weight 100
    text-align center

  &__details
    display flex
    flex-direction row
    justify-content space-between
    padding 8px 16px

    +mobile()
      align-items center
      flex-direction column

  &__price
    +mobile()
      margin-bottom 8px
      text-align center

    &__value
      font-weight 700

  &__size
    font-size .65rem
    text-transform lowercase
