@import "reset"
@import "grid"
@import "productList"
@import "product"
@import "filter"
@import "sorting"
@import "starRating"

#app
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #2c3e50
  max-width 960px
  margin 0 auto

  +mobile()
    width 100%

#nav
  border-bottom 1px solid #efefef
  margin-bottom 16px
  padding 30px 0

  +mobile()
    text-align center

  a
    font-weight bold
    color #2c3e50
    &.router-link-exact-active
      color #42b983

.main
  display flex
  margin 0 auto
